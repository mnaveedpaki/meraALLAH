<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/nameCard"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_130sdp"
        android:elevation="@dimen/_5sdp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:id="@+id/cardLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/card_color"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/nameArabic"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_70sdp"
                android:fontFamily="@font/katibeh"
                android:gravity="center|bottom"
                android:text="ٱلْصَّبُور"
                android:textColor="@color/gold"
                android:textDirection="rtl"
                app:autoSizeMaxTextSize="100sp"
                app:autoSizeMinTextSize="@dimen/_14sdp"
                app:autoSizeStepGranularity="@dimen/_10sdp"
                app:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/nameEnglish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/marko_one"
                android:gravity="center"
                android:text="AR-RAZZAAQ"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>